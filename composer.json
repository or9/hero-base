{
	"name": "hero/cards",
	"description": "Flashcard game.",
	"keywords": ["flashcards", "language", "game"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.*",
		"ext-apcu": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"mockery/mockery": "dev-master@dev"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan config:cache",
			"php artisan db:seed",
			"npm start"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan config:cache",
			"bower update",
			"bower install"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
