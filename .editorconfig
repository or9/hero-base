# Top-most editorconfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation
[*.js]
indent_style = tab
trim_trailing_whitespace = true
max_line_length = 80
indent_size = 8

[*.php]
indent_style = tab
trim_trailing_whitespace = true
max_line_length = 80
indent_size = 8

# Indentation override for libs
[lib/**/*.js,src/vendor/**/*.js]
indent_style = space
indent_size = 2

[{package.json,bower.json}]
indent_style = space
indent_size = 8
